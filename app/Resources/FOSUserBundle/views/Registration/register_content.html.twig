{% trans_default_domain 'FOSUserBundle' %}

<h2>Formulario de Registro</h2>
<br>
{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}

    <div class="form-group text-left">
      {{ form_label(form.username) }}
      {{ form_errors(form.username) }}
      {{ form_widget(form.username, { 'attr': {'class': 'form-control','placeholder': 'Nombre de usuario'}})}}
    </div>
    <div class="form-group text-left">
      {{ form_label(form.email) }}
      {{ form_errors(form.email) }}
      {{ form_widget(form.email, { 'attr': {'class': 'form-control','placeholder': 'Email / Correo'} }) }}
    </div>
    <div class="form-group text-left">
      {{ form_label(form.plainPassword.first) }}
      <p class="text-danger">{{ form_errors(form.plainPassword.first) }}</p>
      {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control','placeholder': 'Contraseña'} }) }}
    </div>
    <div class="form-group text-left">
      {{ form_label(form.plainPassword.second) }}
      <p class="text-danger">{{ form_errors(form.plainPassword.second) }}</p>
      {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control','placeholder': 'Repita la Contraseña'} }) }}
    </div>
    <hr>


    <div>
        <input class="btn btn-default form-control" type="submit" value="{{ 'registration.submit'|trans }}" />
    </div>
{{ form_end(form) }}
