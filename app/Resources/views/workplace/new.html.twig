{# extends 'base.html.twig' #}
{% extends "ResumeBundle:Default:panel-backend.html.twig" %}
{% block maincontent %}
<div class="row">
    <div class="col-lg-12">
    <h1 class="page-header">Establecimientos</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-6">
              <div class="panel panel-default">
                        <div class="panel-heading">
                            Nuevo Establecimiento
                        </div>
                        <div class="panel-body">
                        {{ form_start(form) }}
                        <div class="form-group">
                          <label>Nombre</label>
                            <p class="text-danger">{{ form_errors(form.name) }}</p>
                            {{ form_widget(form.name,{ 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="form-group">
                          <label>Dirección</label>
                            <p class="text-danger">{{ form_errors(form.address) }}</p>
                            {{ form_widget(form.address,{ 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="form-group">
                          <label>Dirección</label>
                            <p class="text-danger">{{ form_errors(form.responsable) }}</p>
                            {{ form_widget(form.responsable,{ 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="form-group">
                            <input class="btn btn-default" type="submit" value="Agregar" />
                        </div>
                        {{ form_end(form) }}

                        </div>
                        <div class="panel-footer">

                        </div>
              </div>
    </div>
    <div class="col-lg-6">
      {% if infotext is defined %}
      <div class="panel panel-info">
                <div class="panel-heading">
                    Información
                </div>
                <div class="panel-body">
                    <p>{{infotext}}</p>
                </div>
                <div class="panel-footer">
                    <a class="btn btn-default" href="{{ path('panel_workplace_index') }}">Volver</a>
                </div>
      </div>
      {% endif %}
    </div>
</div>
{% endblock %}
