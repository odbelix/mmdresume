{% extends "ResumeBundle:Default:panel-layout.html.twig" %}
{% block maincontent %}
    <h1>Nuevo lugar de trabajo</h1>
    <hr>
    {{ form_start(form) }}
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th>Nombre</th>
          <td>{{ form_errors(form.name) }}
          {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}</td>
        </tr>
        <tr>
          <th>Direcci√≥n</th>
          <td>{{ form_errors(form.address) }}
