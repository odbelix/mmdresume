{# extends 'base.html.twig' #}
{% extends "ResumeBundle:Default:panel-layout.html.twig" %}

{% block maincontent %}
    <h1>Lista de Lugares de Trabajo</h1>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Direcci√≥n</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
        {% for workplace in workplaces %}
            <tr>
                <td><a href="{{ path('panel_workplace_show', { 'id': workplace.id }) }}">{{ workplace.id }}</a></td>
                <td>{{ workplace.name }}</td>
                <td>{{ workplace.address }}</td>
