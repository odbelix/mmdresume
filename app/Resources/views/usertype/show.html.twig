{% extends "ResumeBundle:Default:panel-backend.html.twig" %}

{% block maincontent %}
<div class="row">
    <div class="col-lg-12">
    <h1 class="page-header">Tipo de Usuario</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          Tipo de Usuario #{{ usertype.id }}
        </div>
        <div class="panel-body">

        <!-- TABLE -->
      <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ usertype.name }}</td>
            </tr>
            <tr>
                <th>Detalle</th>
                <td>{{ usertype.detail }}</td>
            </tr>
            <tr>
              <td colspan="2">
              <div class="btn-group button-in-table" role="group" aria-label="...">
                  <a class="btn btn-default"  href="{{ path('panel_usertype_index') }}">Volver</a>
                  <a class="btn btn-default" href="{{ path('panel_usertype_edit', { 'id': usertype.id }) }}">Editar</a>
              </div>
              </td>
            </tr>
        </tbody>
    </table>

        <!-- TABLE -->

        </div>
        <div class="panel-footer">
        {{ form_start(delete_form) }}
            <input class="btn btn-danger" type="submit" value="Eliminar">
        {{ form_end(delete_form) }}
        </div>
    </div>
    <div class="col-lg-6">
    </div>
</div>
{% endblock %}
