{% extends "ResumeBundle:Default:panel-backend.html.twig" %}
{% block maincontent %}
{{ include ('usertype/title.html.twig') }}

<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
              <div class="panel-heading">
                  Editanto Tipo de Usuario
              </div>
              <div class="panel-body">

                {{ form_start(edit_form,{'attr': { 'role': 'form' } }) }}
                <div class="form-group">
                  <label>Nombre</label>
                  <p class="text-danger">{{ form_errors(edit_form.name) }}</p>
                  {{ form_widget(edit_form.name, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="form-group">
                  <label>Detalle</label>
                  <p class="text-danger">{{ form_errors(edit_form.detail) }}</p>
                  {{ form_widget(edit_form.detail, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="form-group">
                  <input class="btn btn-default" type="submit" value="Editar" />
                </div>
                {{ form_end(edit_form) }}
              </div>
              <div class="panel-footer">
                {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Eliminar">
                {{ form_end(delete_form) }}
              </div>
        </div>
    </div>
    <div class="col-lg-6">
    </div>
</div>

{% endblock %}
