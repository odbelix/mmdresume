{# extends 'base.html.twig' #}
{% extends "ResumeBundle:Default:panel-backend.html.twig" %}

{% block maincontent %}
<div class="row">
    <div class="col-lg-12">
    <h1 class="page-header">Especialidades</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">Lista de <b>Especialidades</b> creadas en la Plataforma
        <a class="btn btn-default" href="{{ path('panel_speciality_new') }}">Nuevo</a>
        </div>
        <div class="panel-body">
    {% include "ResumeBundle:Utils:search-table-searchbar.html.twig" %}
          <table class="table table-bordered results">
        <thead>
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Opciones</th>
            </tr>
            {% set columns = 3 %}
            {% include "ResumeBundle:Utils:search-table-trresult.html.twig" %}
        </thead>
        <tbody>
        {% set count = 1 %}
        {% for speciality in specialities %}
            <tr>
                <td><a href="{{ path('panel_speciality_show', { 'id': speciality.id }) }}">{{ count }}</a></td>
                <td>{{ speciality.name }}</td>
                <td>
                    <a class="btn btn-default" href="{{ path('panel_speciality_edit', { 'id': speciality.id }) }}">Editar</a>
                </td>
            </tr>
            {% set count = count + 1 %}
        {% endfor %}
            <tr>
              <td colspan="3">
                <a class="btn btn-default" href="{{ path('panel_speciality_new') }}">Nuevo</a>
              </td>
            </tr>
        </tbody>
    </table>
    </div>
  </div>
</div>
</div>

{% endblock %}


{% block scriptpage %}
<script src="{{asset('js/search-bar-tables.js')}}"></script>
{% endblock %}
