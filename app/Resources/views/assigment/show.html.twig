{% extends "ResumeBundle:Default:panel-backend.html.twig" %}
{% block maincontent %}
{{ include ('assigment/title.html.twig') }}


<!-- /.row -->
<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">Asignaciones</b>
        </div>
        <div class="panel-body">

        <div class="row">
          <div class="col-lg-8">
              <div class="panel panel-default">
                  <div class="panel-heading">Asignación #{{ assigment.id }}</b>
                  </div>
                  <div class="panel-body">


                  <table class="table table-bordered">
                      <tbody>
                          <tr>
                              <th>Trabajo</th>
                              <td>{{ assigment.job }} <br><a class="btn btn-info btn-xs" href="{{path('panel_job_show',{'id':assigment.job.id})}}">Ver Más</a></td>
                          </tr>
                          <tr>
                              <th>Asignado</th>
                              <td>{% if assigment.dateassigment %}{{ assigment.dateassigment|date('Y-m-d') }}{% endif %}</td>
                          </tr>
                          <tr>
                              <th>Version</th>
                              <td>{{ assigment.version }}</td>
                          </tr>
                          <tr>
                              <th>Responsable de la Asignación</th>
                              <td>{{ assigment.responsable }}</td>
                          </tr>
                          <tr>
                            <th>Tipo de Postulante</th>
                            <td>{{assigment.job.profession.usertype}}</td>
                          </tr>
                          <tr>
                            <th>Tipo de Professión</th>
                            <td>{{assigment.job.profession}}</td>
                          </tr>
                          <tr>
                            <th>Postulante Seleccionado</th>
                            <td>{{assigment.user.firstname}} {{assigment.user.middlename}} {{assigment.user.lastname}} {{assigment.user.momlastname}} <br>

                            {% if assigment.user.usertypeid == 1 %}
                              <a class="btn btn-info btn-xs" href="{{ path('panel_postulant_teacher_profile', { 'teacherid': assigment.user.id }) }}">Ver más</a>
                            {% else %}
                              <a class="btn btn-info btn-xs" href="">Ver Más</a></td>
                            {% endif %}

                          </tr>
                          <tr>
                            <th colspan="2">
                                <a class="btn btn-default" href="{{ path('panel_assigment_index') }}">Volver</a>
                                <a class="btn btn-default" href="{{ path('panel_assigment_edit', { 'id': assigment.id }) }}">Editar</a>
                            </th>
                          </tr>
                      </tbody>
                  </table>



                  </div>
                  <div class="panel-footer">
                  {{ form_start(delete_form) }}
                      <input class="btn btn-danger" type="submit" value="Eliminar">
                  {{ form_end(delete_form) }}
                  </div>
              </div>


          </div>
        </div>

      </div>
    </div>
  </div>
</div>





{% endblock %}
