{% extends "ResumeBundle:Default:panel-backend.html.twig" %}

{% block maincontent %}
<div class="row">
    <div class="col-lg-12">
    <h1 class="page-header">Textos de Ayuda</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-6">
          {{ form_start(form,{ 'attr': {'role':'form'} }) }}
          <div class="form-group">
            <label>Nombre corto</label>
              <p class="text-danger">{{ form_errors(form.shortname) }}</p>
              {{ form_widget(form.shortname,{ 'attr': {'class': 'form-control'} }) }}
          </div>
          <div class="form-group">
            <label>Secci√≥n</label>
              <p class="text-danger">{{ form_errors(form.section) }}</p>
              {{ form_widget(form.section,{ 'attr': {'class': 'form-control'} }) }}
          </div>
          <div class="form-group">
            <label>Texto</label>
              <p class="text-danger">{{ form_errors(form.text) }}</p>
              {{ form_widget(form.text,{ 'attr': {'class': 'form-control'} }) }}
          </div>
          <input class="btn btn-default" type="submit" value="Agregar" />
          {{ form_end(form) }}
    </div>
    <div class="col-lg-6">
      <a class="btn btn-default" href="{{ path('panel_infotext_index') }}">Volver</a>
    </div>
</div>
{% endblock %}
