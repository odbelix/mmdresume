{% extends "ResumeBundle:Default:panel-backend.html.twig" %}
{% block maincontent %}
<div class="row">
    <div class="col-lg-12">
    <h1 class="page-header">Textos de Ayuda</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-6">
      <div class="panel panel-default">
        <div class="panel-heading">
              Editanto Especialidad
        </div>
        <div class="panel-body">
            {{ form_start(edit_form) }}
            <div class="form-group">
              <label>Nombre corto</label>
              {{ form_widget(edit_form.shortname, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
              <label>Secci√≥n</label>
              {{ form_widget(edit_form.section, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
              <label>Texto</label>
              {{ form_widget(edit_form.text, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
              <input class="btn btn-default" type="submit" value="Editar" />
              <a class="btn btn-default" href="{{ path('panel_infotext_index') }}">Volver</a>
            </div>
            {{ form_end(edit_form) }}
        </div>
        <div class="panel-footer">
          {{ form_start(delete_form) }}
            <input class="btn btn-danger" type="submit" value="Eliminar">
          {{ form_end(delete_form) }}
        </div>
      </div>
    </div>
    <div class="col-lg-6">
    </div>


{% endblock %}
