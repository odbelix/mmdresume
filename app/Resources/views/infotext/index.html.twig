{% extends "ResumeBundle:Default:panel-backend.html.twig" %}

{% block maincontent %}
<div class="row">
    <div class="col-lg-12">
    <h1 class="page-header">Textos de Ayuda</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">Lista de <b>Textos de Ayuda</b> creados en la Plataforma
          <a class="btn btn-default" href="{{ path('panel_infotext_new') }}">Nuevo</a>
        </div>
        <div class="panel-body">
          <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Secci√≥n</th>
                    <th>Infotext</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
            {% for infotext in infotexts %}
                <tr>
                    <td><a href="{{ path('panel_infotext_show', { 'id': infotext.id }) }}">{{ infotext.id }}</a></td>
                    <td>{{ infotext.section }}</td>
                    <td><div id="truncateLongTexts">{{ infotext.text }}</div></td>
                    <td>
                        <div class="btn-group button-in-table" role="group" aria-label="...">
                          <a class="btn btn-default" href="{{ path('panel_infotext_show', { 'id': infotext.id }) }}">Ver</a>
                          <a class="btn btn-default" href="{{ path('panel_infotext_edit', { 'id': infotext.id }) }}">Editar</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            <tr>
              <td colspan="4">
                  <a class="btn btn-default" href="{{ path('panel_infotext_new') }}">Nuevo</a>
              </td>
            </tr>
            </tbody>
        </table>
        </div>
        </div>
    </div>
    <!-- /.col-lg-12 -->
</div>

{% endblock %}
