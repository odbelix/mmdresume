{% extends "ResumeBundle:Default:panel-backend.html.twig" %}

{% block maincontent %}
<div class="row">
    <div class="col-lg-12">
    <h1 class="page-header">Tipo de Postulante</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          Postulante # {{ type.id }}
        </div>
        <div class="panel-body">
          <table class="table table-bordered">
          <tbody>
            <tr>
                <th>#</th>
                <td>{{ type.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ type.name }}</td>
            </tr>
            <tr>
                <td colspan="2">
                <a class="btn btn-default" href="{{ path('panel_type_index') }}">Volver</a>
                <a class="btn btn-default" href="{{ path('panel_type_edit', { 'id': type.id }) }}">Editar</a>
                </td>
            </tr>
          </tbody>
          </table>
        </div>
        <div class="panel-footer">
        {{ form_start(delete_form) }}
            <input class="btn btn-danger" type="submit" value="Eliminar">
        {{ form_end(delete_form) }}
        </div>
    </div>
    <div class="col-lg-6">
    </div>
</div>
{% endblock %}
