{% extends "ResumeBundle:Default:panel-backend.html.twig" %}
{% block maincontent %}
<div class="row">
    <div class="col-lg-12">
    <h1 class="page-header">Asistente de Educación</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">Información Personal</div>
        <div class="panel-body">
	    <div class="row">
		<div class="col-lg-6">

		 <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <tr>
              <th colspan="2">Información Personal</th>
            </tr>
            <tr>
              <th>Rut</th>
              <td>{{assistant.rut}}</td>
            </tr>
            <tr>
              <th>Primer Nombre</th>
              <td>{{assistant.firstname}}</td>
            </tr>
            <tr>
              <th>Segundo Nombre</th>
              <td>{{assistant.middlename}}</td>
            </tr>
            <tr>
              <th>Apellido Paterno</th>
              <td>{{assistant.lastname}}</td>
            </tr>
            <tr>
              <th>Apellido Materno</th>
              <td>{{assistant.momlastname}}</td>
            </tr>
            <tr>
              <th>Genero</th>
              <td>{{assistant.gender}}</td>
            </tr>
            <tr>
              <th>Fecha de nacimiento</th>
              <td>{{assistant.birthdate|date("d-M-Y")}}</td>
            </tr>
            </table>

		</div>
		<div class="col-lg-6">
			<table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <tr>
          <th colspan="2">Información de Contacto</th>
          </tr>
          <tr>
          <th>Correo</th>
          <td>{{assistant.email}}</td>
          </tr>
          <tr>
          <th>Teléfono</th>
          <td>{{assistant.phone}}</td>
          </tr>
          <tr>
          <th>Celular</th>
          <td>{{assistant.celphone}}</td>
          </tr>
          <tr>
          <th colspan="2">Localización</th>
          </tr>
          <tr>
          <th>Dirección</th>
          <td>{{assistant.address}}</td>
          </tr>
          <tr>
          <th>Ciudad</th>
          <td>{{assistant.city}}</td>
          </tr>
          </table>
		</div>
            </div>
        </div>
      </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">Información Profesional</div>
        <div class="panel-body">
          <div class="row">
              <div class="col-lg-12">
              <!-- TITLES -->
              <table class="table table-stripped table-hover">
              <thead>
                <tr>
                  <th colspan="2">Títulos</th>
                  </tr>
                <tr>
                  <th>Título</th>
                  <th>Año</th>
                </tr>
              </thead>
              <tbody>
              {% for title in titles %}
                <tr>
                  <td>{{title.name}}</td>
                  <td>{{title.obtaining}}</td>
                </tr>
              {% endfor %}
              </tbody>
              </table>

              </div>
          </div>
          <div class="row">
              <div class="col-lg-12">

              <table class="table table-stripped table-hover">
              <thead>
                <tr>
                  <th colspan="4">Experiencia Laboral</th>
                </tr>
                <tr>
                  <th>Trabajo</th>
                  <th>Establecimiento</th>
                  <th>Periodo</th>
                  <th>Detalle</th>
                </tr>
              </thead>
              <tbody>
              {% for exp in experiences %}
                <tr>
                  <td>{{exp.name}}</td>
                  <td>
                  {% if exp.workplace is empty %}
                    <b>{{exp.other}}</b>
                  {% else %}
                    <b>{{exp.workplace}}</b>
                  {% endif %}
                  </td>
                  <td>{{exp.startdate|date('m-Y')}} - {{exp.enddate|date('m-Y')}}</td>
                  <td>{{exp.detail}}</td>
                </tr>
              {% endfor %}
              </tbody>
              </table>

              </div>
          </div>
        </div>
      </div>
  </div>
</div>

{% endblock %}
